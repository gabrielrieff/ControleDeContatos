@model LoginModel;

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login"; 
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">x</button>
        @TempData["MensagemErro"]
    </div>

}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="Login" asp-action="Logar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Password" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <button type="submit" class="btn btn-success btn-block">Logar</button>
    <a asp-action="RedefinirSenha" asp-controller="Login" class="mb-4 text-sm-center mx-auto text-primary text-gradient">Redefinir minha senha!</a>
</form>