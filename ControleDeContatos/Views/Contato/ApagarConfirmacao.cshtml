@model ContatoModel

@{
    ViewData["Title"] = "Confirmaçao";
}

<article class="text-center">
    <h3>Realmente deseja apagar o contato?</h3>
    <span>@Model.Name</span>

    <a role="button" asp-action="Index" asp-asp-controller="Contato" class="btn btn-danger btn-block">Cancelar exclusão</a>
    <a role="button" asp-action="Apagar" asp-asp-controller="Contato" asp-route-id="@Model.Id" class="btn btn-success btn-block">Confirmar exclusão</a>

</article>
