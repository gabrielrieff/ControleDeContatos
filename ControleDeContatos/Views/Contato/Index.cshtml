@model List<ContatoModel>;

@{
    ViewData["Title"] = "Lista de contatos";
}

<article class="text-center">

    <h1>
        Lista de contatos!
    </h1>

    <div class="d-grid gap-2 d-md-flex justyfy-content-md-start mb-4">
        <a asp-action="Criar" asp-asp-controller="Contato" role="button" class="btn btn-info">Adicionar novo contato</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">x</button>
            @TempData["MensagemErro"]
        </div>
        
    }



    <table class="table" id="contatos-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any()){ 
                foreach (var contato in Model)
                {
                <tr>
                    <th scope="row">@contato.Id</th>
                        <td>@contato.Name</td>
                        <td>@contato.Email</td>
                        <td>@contato.Fone</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-success" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                        </div>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr class="odd">
                    <td colspan="5" valign="top">Nenhum contato encontrado!!</td>
                </tr>
            }
        </tbody>
    </table>
</article>
